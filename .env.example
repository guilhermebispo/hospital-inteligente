# Backend application
APP_NAME=Hospital Inteligente API
API_PREFIX=
DEBUG=false

# Connection string used by the Docker containers
DATABASE_URL=postgresql+psycopg://hospital_user:hospital_pass@db:5432/hospital_db

# Optional connection string for running scripts locally (outside Docker)
LOCAL_DATABASE_URL=postgresql+psycopg://hospital_user:hospital_pass@localhost:5434/hospital_db

# Authentication
JWT_SECRET=change-me
JWT_ALGORITHM=HS256
JWT_EXPIRATION_MS=86400000

# CORS
CORS_ALLOWED_ORIGINS=http://localhost:4200
CORS_ALLOW_CREDENTIALS=true
CORS_ALLOWED_METHODS=GET,POST,PUT,PATCH,DELETE,OPTIONS
CORS_ALLOWED_HEADERS=Authorization,Content-Type,Accept,Origin

# FastAPI exposed port
PORT=8080
